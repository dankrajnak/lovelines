generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                 Int       @id @default(autoincrement())
  compoundId         String    @unique @map("compound_id")
  userId             Int       @map("user_id")
  providerType       String    @map("provider_type")
  providerId         String    @map("provider_id")
  providerAccountId  String    @map("provider_account_id")
  refreshToken       String?   @map("refresh_token")
  accessToken        String?   @map("access_token")
  accessTokenExpires DateTime? @map("access_token_expires")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @default(now()) @map("updated_at")

  @@index([providerAccountId], name: "providerAccountId")
  @@index([providerId], name: "providerId")
  @@index([userId], name: "userId")
  @@map("account")
}

model Person {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  name          String?
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @default(now()) @map("updated_at")
  stories       Story[]

  @@map("person")
}

model Session {
  id           Int      @id @default(autoincrement())
  userId       Int      @map("user_id")
  expires      DateTime
  sessionToken String   @unique @map("session_token")
  accessToken  String   @unique @map("access_token")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @default(now()) @map("updated_at")

  @@map("session")
}

model VerificationRequest {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @map("updated_at")

  @@map("verification_request")
}

model Period {
  id           Int      @id @default(autoincrement())
  date         DateTime
  lineId       Int      @map(name: "line_id")
  isHeartBreak Boolean  @map(name: "is_heart_break")
  intensity    Int
  line         Line     @relation(fields: [lineId], references: [id])

  @@index([isHeartBreak], name: "idx_period_is_heart_break")
  @@index([date], name: "idx_period_date_desc")
  @@index([lineId], name: "idx_period_line")
  @@map("period")
}

model Line {
  id          Int       @id @default(autoincrement())
  storyId     Int       @map(name: "story_id")
  story       Story     @relation(fields: [storyId], references: [id])
  periods     Period[]
  createdDate DateTime  @default(now()) @map("created_date")
  deletedDate DateTime? @map("deleted_date")


  @@index([storyId], name: "idx_line_story_id")
  @@index([deletedDate], name: "idx_line_deleted_date")
  @@map("line")
}

model Story {
  id           Int       @id @default(autoincrement())
  personId     Int       @map("pesron_id")
  createdDate  DateTime  @default(now()) @map("created_date")
  modifiedDate DateTime  @default(now()) @map("modified_date")
  deletedDate  DateTime? @map("deleted_date")
  person       Person    @relation(fields: [personId], references: [id])
  line         Line[]


  @@index([personId], name: "idx_story_person_id")
  @@index([deletedDate], name: "idx_story_deleted_date")
  @@map("story")
}
